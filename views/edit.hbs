<body>
    <h1>Edit Note</h1>
    <div class="info">
        <form action="/posts/{{posts._id}}?_method=PUT" method="POST">



            <div class="title">
                <input type="text" placeholder="   Enter Title...  " name="title" value={{posts.title}}>
            </div>
            <div class="markdown">
                <textarea rows="35" cols="55" placeholder=" Write Your Notes Here..."
                    name="markdown">{{posts.body}}</textarea>
            </div>
            <div class="save">
                <button>Save</button>
            </div>

        </form>
    </div>



</body>

</html>